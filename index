        ];

        // –≠–ª–µ–º–µ–Ω—Ç—ã DOM
        const gameScreen = document.getElementById('gameScreen');
        const resultScreen = document.getElementById('resultScreen');
        const currentRoundEl = document.getElementById('currentRound');
        const scoreEl = document.getElementById('score');
        const progressBar = document.getElementById('progressBar');
        const situationImage = document.getElementById('situationImage');
        const situationText = document.getElementById('situationText');
        const optionsContainer = document.getElementById('optionsContainer');
        const submitBtn = document.getElementById('submitBtn');
        const feedbackContainer = document.getElementById('feedbackContainer');
        const feedbackText = document.getElementById('feedbackText');
        const tipText = document.getElementById('tipText');
        const nextBtn = document.getElementById('nextBtn');
        const resultTitle = document.getElementById('resultTitle');
        const resultScore = document.getElementById('resultScore');
        const resultText = document.getElementById('resultText');
        const resultIcon = document.getElementById('resultIcon');
        const restartBtn = document.getElementById('restartBtn');

        // –ü–µ—Ä–µ–º–µ–Ω–Ω—ã–µ –∏–≥—Ä—ã
        let currentRound = 0;
        let totalScore = 0;
        let selectedOption = null;
        let isAnswerSubmitted = false;

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–≥—Ä—ã
        function initGame() {
            currentRound = 0;
            totalScore = 0;
            updateProgressBar();
            updateScore();
            loadRound();
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ —Ç–µ–∫—É—â–µ–≥–æ —Ä–∞—É–Ω–¥–∞
        function loadRound() {
            const round = gameRounds[currentRound];
            
            // –û–±–Ω–æ–≤–ª—è–µ–º —Å–∏—Ç—É–∞—Ü–∏—é –∏ –∏–ª–ª—é—Å—Ç—Ä–∞—Ü–∏—é
            situationText.textContent = round.situation;
            situationImage.src = round.illustration;
            situationImage.alt = "–ò–ª–ª—é—Å—Ç—Ä–∞—Ü–∏—è –∫ –∫–µ–π—Å—É " + (currentRound + 1);
            currentRoundEl.textContent = currentRound + 1;
            
            // –û—á–∏—â–∞–µ–º –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä —Å –≤–∞—Ä–∏–∞–Ω—Ç–∞–º–∏
            optionsContainer.innerHTML = '';
            
            // –°–æ–∑–¥–∞—ë–º –≤–∞—Ä–∏–∞–Ω—Ç—ã –æ—Ç–≤–µ—Ç–æ–≤
            round.options.forEach((option, index) => {
                const optionElement = document.createElement('div');
                optionElement.className = 'option';
                optionElement.dataset.index = index;
                optionElement.dataset.score = option.score;
                
                optionElement.innerHTML = `
                    <div class="option-label">${String.fromCharCode(65 + index)}</div>
                    <div class="option-text">${option.text}</div>
                `;
                
                // –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –≤—ã–±–æ—Ä–∞ –≤–∞—Ä–∏–∞–Ω—Ç–∞
                optionElement.addEventListener('click', () => selectOption(optionElement));
                
                optionsContainer.appendChild(optionElement);
            });
            
            // –°–±—Ä–∞—Å—ã–≤–∞–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ
            selectedOption = null;
            isAnswerSubmitted = false;
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-check-circle"></i> –ü–æ–¥—Ç–≤–µ—Ä–¥–∏—Ç—å –≤—ã–±–æ—Ä';
            submitBtn.style.display = 'inline-flex';
            feedbackContainer.classList.remove('show');
            
            // –ü—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –∫ –Ω–∞—á–∞–ª—É
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // –í—ã–±–æ—Ä –≤–∞—Ä–∏–∞–Ω—Ç–∞
        function selectOption(optionElement) {
            if (isAnswerSubmitted) return;
            
            // –°–Ω–∏–º–∞–µ–º –≤—ã–¥–µ–ª–µ–Ω–∏–µ —Å–æ –≤—Å–µ—Ö –≤–∞—Ä–∏–∞–Ω—Ç–æ–≤
            document.querySelectorAll('.option').forEach(opt => {
                opt.classList.remove('selected');
            });
            
            // –í—ã–¥–µ–ª—è–µ–º –≤—ã–±—Ä–∞–Ω–Ω—ã–π
            optionElement.classList.add('selected');
            selectedOption = optionElement;
            submitBtn.disabled = false;
        }

        // –ü–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ –≤—ã–±–æ—Ä–∞
        function submitAnswer() {
            if (!selectedOption || isAnswerSubmitted) return;
            
            isAnswerSubmitted = true;
            
            const round = gameRounds[currentRound];
            const optionIndex = parseInt(selectedOption.dataset.index);
            const selectedOptionData = round.options[optionIndex];
            
            // –î–æ–±–∞–≤–ª—è–µ–º –±–∞–ª–ª—ã
            totalScore += selectedOptionData.score;
            updateScore();
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Ñ–∏–¥–±–µ–∫
            feedbackText.innerHTML = selectedOptionData.feedback;
            tipText.textContent = selectedOptionData.tip;
            
            // –ü–æ–¥—Å–≤–µ—á–∏–≤–∞–µ–º –ø—Ä–∞–≤–∏–ª—å–Ω—ã–π –æ—Ç–≤–µ—Ç (—Å–∞–º—ã–π –≤—ã—Å–æ–∫–∏–π –±–∞–ª–ª)
            document.querySelectorAll('.option').forEach((opt, idx) => {
                if (round.options[idx].score === 3) {
                    opt.classList.add('option-correct');
                }
                opt.style.pointerEvents = 'none'; // –û—Ç–∫–ª—é—á–∞–µ–º –∫–ª–∏–∫–∏
            });
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –ø—Ä–æ–≥—Ä–µ—Å—Å
            document.querySelectorAll('.progress-step')[currentRound].classList.add('completed');
            
            // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Ñ–∏–¥–±–µ–∫
            feedbackContainer.classList.add('show');
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –∫–Ω–æ–ø–∫—É
            submitBtn.style.display = 'none';
            
            // –ü—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –∫ —Ñ–∏–¥–±–µ–∫—É
            setTimeout(() => {
                feedbackContainer.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 300);
        }

        // –ü–µ—Ä–µ—Ö–æ–¥ –∫ —Å–ª–µ–¥—É—é—â–µ–º—É —Ä–∞—É–Ω–¥—É
        function nextRound() {
            currentRound++;
            
            if (currentRound < gameRounds.length) {
                loadRound();
            } else {
                showResults();
            }
        }

        // –ü–æ–∫–∞–∑ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤
        function showResults() {
            gameScreen.style.display = 'none';
            resultScreen.style.display = 'block';
            
            // –û–ø—Ä–µ–¥–µ–ª—è–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç
            let title, message, icon, color;
            
            if (totalScore <= 7) {
                title = "–ï—Å—Ç—å –Ω–∞–¥ —á–µ–º –ø–æ—Ä–∞–±–æ—Ç–∞—Ç—å";
                message = "–ü–æ–∫–∞ –≤–∞—à–∏ —Ä–µ—à–µ–Ω–∏—è –Ω–µ –ø–æ–ª–Ω–æ—Å—Ç—å—é —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É—é—Ç –ø–æ–¥—Ö–æ–¥—É –õ–∏—Ç–†–µ—Å. –†–µ–∫–æ–º–µ–Ω–¥—É–µ–º –∏–∑—É—á–∏—Ç—å case-—Å—Ç–∞—Ç—å–∏ –æ –ø—Ä–æ–¥—É–∫—Ç–æ–≤–æ–º –º–µ–Ω–µ–¥–∂–º–µ–Ω—Ç–µ –∏ data-driven –ø–æ–¥—Ö–æ–¥–µ.";
                icon = "fas fa-chart-line";
                color = "#f44336";
            } else if (totalScore <= 12) {
                title = "–•–æ—Ä–æ—à–∏–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç!";
                message = "–í—ã –ø–æ–∫–∞–∑–∞–ª–∏ —Ö–æ—Ä–æ—à–µ–µ –ø–æ–Ω–∏–º–∞–Ω–∏–µ –∫–ª—é—á–µ–≤—ã—Ö –ø—Ä–∏–Ω—Ü–∏–ø–æ–≤. –ü—Ä–∏–≥–ª–∞—à–∞–µ–º –Ω–∞ —Å–æ–±–µ—Å–µ–¥–æ–≤–∞–Ω–∏–µ, –≥–¥–µ —Å–º–æ–∂–µ—Ç–µ –ø—Ä–æ–¥–µ–º–æ–Ω—Å—Ç—Ä–∏—Ä–æ–≤–∞—Ç—å –±–æ–ª–µ–µ –≥–ª—É–±–æ–∫–∏–µ –∑–Ω–∞–Ω–∏—è.";
                icon = "fas fa-star";
                color = "#ff9800";
            } else {
                title = "–ü–æ–∑–¥—Ä–∞–≤–ª—è–µ–º!";
                message = "–û—Ç–ª–∏—á–Ω—ã–π —Ä–µ–∑—É–ª—å—Ç–∞—Ç! –í–∞—à –ø–æ–¥—Ö–æ–¥ –∫ —Ä–µ—à–µ–Ω–∏—é –∑–∞–¥–∞—á —Å–æ–≤–ø–∞–¥–∞–µ—Ç —Å –∫—É–ª—å—Ç—É—Ä–æ–π –õ–∏—Ç–†–µ—Å. –ñ–¥—ë–º –≤–∞—Å –≤ –∫–æ–º–∞–Ω–¥–µ –±—Ä–µ–Ω–¥-–º–µ–Ω–µ–¥–∂–µ—Ä–æ–≤!";
                icon = "fas fa-trophy";
                color = "#34a853";
                createConfetti();
            }
            
            // –û–±–Ω–æ–≤–ª—è–µ–º UI
            resultTitle.textContent = title;
            resultScore.textContent = `–í–∞—à —Ä–µ–∑—É–ª—å—Ç–∞—Ç: ${totalScore}/15`;
            resultText.textContent = message;
            resultIcon.innerHTML = `<i class="${icon}"></i>`;
            resultIcon.style.color = color;
            
            // –ü—Ä–æ–∫—Ä—É—á–∏–≤–∞–µ–º –∫ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞–º
            setTimeout(() => {
                resultScreen.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 300);
        }

        // –°–æ–∑–¥–∞–Ω–∏–µ –∫–æ–Ω—Ñ–µ—Ç—Ç–∏
        function createConfetti() {
            const colors = ['#0a1e78', '#3d3dc7', '#6262d9', '#ff5500', '#ff8a4c'];
            
            for (let i = 0; i < 80; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.borderRadius = Math.random() > 0.5 ? '50%' : '0';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.top = '-20px';
                confetti.style.transform = `rotate(${Math.random() * 360}deg)`;
                
                document.body.appendChild(confetti);
                
                // –ê–Ω–∏–º–∞—Ü–∏—è
                const duration = 2000 + Math.random() * 2000;
                const animation = confetti.animate([
                    { transform: `translate(0, 0) rotate(0deg)`, opacity: 1 },
                    { transform: `translate(${Math.random() * 200 - 100}px, ${window.innerHeight}px) rotate(${360 * Math.random()}deg)`, opacity: 0 }
                ], {
                    duration: duration,
                    easing: 'cubic-bezier(0.215, 0.610, 0.355, 1)'
                });
                
                animation.onfinish = () => confetti.remove();
            }
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø—Ä–æ–≥—Ä–µ—Å—Å-–±–∞—Ä–∞
        function updateProgressBar() {
            progressBar.innerHTML = '';
            
            for (let i = 0; i < gameRounds.length; i++) {
                const step = document.createElement('div');
                step.className = 'progress-step';
                
                if (i === currentRound) {
                    step.classList.add('active');
                } else if (i < currentRound) {
                    step.classList.add('completed');
                }
                
                step.textContent = i + 1;
                progressBar.appendChild(step);
            }
        }

        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—á—ë—Ç–∞
        function updateScore() {
            scoreEl.textContent = totalScore;
        }

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
        submitBtn.addEventListener('click', submitAnswer);
        nextBtn.addEventListener('click', nextRound);
        restartBtn.addEventListener('click', () => {
            resultScreen.style.display = 'none';
            gameScreen.style.display = 'block';
            initGame();
        });

        // –ë—ã—Å—Ç—Ä—ã–µ –∫–ª–∞–≤–∏—à–∏
        document.addEventListener('keydown', (e) => {
            if (e.key >= '1' && e.key <= '3' && !isAnswerSubmitted) {
                const options = document.querySelectorAll('.option');
                const index = parseInt(e.key) - 1;
                if (options[index]) {
                    selectOption(options[index]);
                }
            }
            
            if (e.key === 'Enter' && !submitBtn.disabled && !isAnswerSubmitted) {
                submitAnswer();
            }
            
            if (e.key === ' ' && feedbackContainer.classList.contains('show')) {
                nextRound();
            }
        });

        // –ó–∞–ø—É—Å–∫ –∏–≥—Ä—ã –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        document.addEventListener('DOMContentLoaded', () => {
            initGame();
        });
    </script>
</body>
</html>
